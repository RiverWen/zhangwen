.container {
    padding: 20rpx;
}
.content{
    width:100%;
    height:360rpx;
    box-sizing: border-box;
}
.footer {
    display: flex;
    align-items: center;
    position: fixed;
    padding: 20rpx;
    width: 100%;
    box-sizing: border-box;
    background: #f1f1f1;
}
.words-num {
    flex: 1;
    text-align: right;
    color: #474747;
    font-size: 32rpx;
    padding-right: 30rpx;
}
.send-btn {
    margin-right: 20rpx;
}
.image-list {
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
}
.image {
    width: 100%;
    height: 100%;
}
.image-wraper {
    width: 220rpx;
    height: 220rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    position: relative;
    overflow: hidden;
    text-align: center;
}
.selectphoto {
    display: flex;
    align-items: center;
    justify-content: center;
    border: #474747 dashed 1rpx;
}
.icon-plus {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 60rpx;
    color: #474747;
}
.icon-deleteclosecancel {
    position: absolute;
    top: 0;
    right: 0;
    width: 60rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 58rpx;
    font-weight: holder;
}