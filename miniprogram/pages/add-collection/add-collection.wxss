page{
    background-color: #ccc;
}
.page-container {
    padding: 20rpx;
}
.title {
    margin: 30rpx 0 20rpx 20rpx;
}
.radio  {
    margin: 0 30rpx;
}
.input-box {
    background-color: #eeeeee;
    height: 60rpx;
    border-radius: 30rpx;
    font-size: 32rpx;
    color: #777;
    padding: 0 25rpx;
}
.image-list {
    display: flex;
    flex-wrap: wrap;
    margin-top: 30rpx;
}
.image {
    width: 100%;
    height: 100%;
}
.image-wraper {
    width: 220rpx;
    height: 220rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    position: relative;
    overflow: hidden;
    text-align: center;
}
.selectphoto {
    display: flex;
    align-items: center;
    justify-content: center;
    border: #474747 dashed 1rpx;
}
.icon-plus {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 60rpx;
    color: #474747;
}
.icon-deleteclosecancel {
    position: absolute;
    top: 0;
    right: 0;
    width: 60rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 58rpx;
    font-weight: holder;
}
.send-btn-wraper {
    padding: 30rpx 0;
}