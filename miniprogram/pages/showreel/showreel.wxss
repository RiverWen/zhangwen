page {
    background-color: #ccccd6;
}
.entrance{
    width: 100%;
    height: 80rpx;
    background-color: #4c1f24;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 30rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}
.swiper-container {
    border-radius: 25rpx;
    margin: 20rpx;
    overflow: hidden;
}
.swiper {
    border-radius: 50rpx;
}
.swiper-image {
    width: 100%;

}
.production-card {
    margin: 0 20rpx;
    padding: 40rpx 20rpx 20rpx 20rpx;
    background-color: #ccc;
    border-bottom: #4c1f24 1rpx solid;
    display: flex;
}

.card-text {
    flex: 1;
    padding: 10rpx;
    padding-left: 10rpx;
    display: flex;
    flex-direction: column;
}
.card-title {
    font-size: 38rpx;
    margin-bottom: 10rpx;
}
.card-content {
    flex:1;
    font-size: 32rpx;
    color: #666;
    line-height: 32rpx;
}
.card-time {
    font-size: 26rpx;
    color: #999;
}
.card-image {
    width: 220rpx;
    height: 220rpx;
    margin-left: 10rpx;
}