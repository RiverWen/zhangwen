.page-container{
    margin: 20rpx;
}
.title-box {
    width: 100%;
    height: 50rpx;
    padding: 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 15rpx;
}
.color-block {
    width:10rpx;
    height:35rpx;
    background-color: #4c1f24;
    margin-right: 20rpx;
}
.image-wraper {
    width: 100%;
    height: 420rpx;
    overflow: hidden;
    border-radius: 30rpx;
}
.image {
    width:100%;
}
.content-text {
    font-size: 28rpx;
    color: #4d4042;
}
.content {
    margin: 0 35rpx;
}