/* pages/collection/collection.wxss */
.collections-container {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding: 20rpx;

}
.collection-card {
    width: 300rpx;
    height: 400rpx;
    border: #4c1f24 1px solid;
    padding: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    box-shadow: 5px 5px 5px gainsboro;
    margin: 15rpx;
}
.card-image {
    border: #4c1f24 1px solid;
    width: 280rpx;
    height: 280rpx;
}
.card-discript {
    width: 280rpx;
    height:100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.card-title {
    text-align: center;
    font-size: 28rpx;
    color: #333;
    margin: 10rpx 0;

}
.card-content {
    text-align: center;
    font-size: 24rpx;
    color: #999
}